{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-prettier", "tslint-plugin-prettier"],
  "jsRules": {},
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "max-line-length": [
      true,
      {
        "limit": 140,
        "ignore-pattern": "^import [^,]+ from |^export | implements"
      }
    ],
    "no-console": false,
    "max-classes-per-file": [true, 5],
    "prettier": true
  },
  "rulesDirectory": []
}
